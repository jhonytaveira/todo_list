<div class="row">
  <div class="form-group col-md-12">
    <div class="controls">
      <%= f.input :title,
                  input_html: {
                      class: 'form-control date' } %>
    </div>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-12">
    <div class="controls">
      <%= f.input :description,
                  as: :text,
                  input_html: {
                      class: 'form-control date' } %>
    </div>
  </div>
</div>
<br><br>

<div class="modal-footer">
  <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
  <%= button_tag t('buttons.close'), class: 'btn btn-secondary', 'data-dismiss': 'modal' %>
</div>
